<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ComputadorFragment">

    <ImageView
        android:id="@+id/descripcionPc"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/computador"
        android:translationX="110dp"
        android:translationY="30dp">
    </ImageView>
    <TextView
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Computador"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25dp"
        android:translationX="130dp"
        android:translationY="210dp">
    </TextView>
    <TextView
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Precio: $3.550.000"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25dp"
        android:translationX="100dp"
        android:translationY="240dp">
    </TextView>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:translationX="55dp"
        android:translationY="280dp"
        android:background="@drawable/stylo_borde_editextrojo">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Una computadora todo en uno es un dispositivo diseñado específicamente
                    para satisfacer todas tus necesidades informáticas en un paquete que es delgado y compacto,
                    fácil de configurar, fácil de usar y fácil de mantener."
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/firasans">
                </TextView>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="CANTIDAD"
        android:textColor="@color/black"
        android:fontFamily="@font/firasans"
        android:translationX="100dp"
        android:translationY="590dp">
    </TextView>
    <EditText
        android:id="@+id/cantidadComputador"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:background="@drawable/stylo_borde_editext"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/firasans"
        android:text="1"
        android:gravity="center"
        android:translationX="210dp"
        android:translationY="585dp"
        android:inputType="number">
    </EditText>
    <Button
        android:id="@+id/botonAgregarPc"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="AGREGAR"
        android:fontFamily="@font/firasans"
        android:textSize="20dp"
        android:textStyle="bold"
        android:translationX="95dp"
        android:translationY="635dp">
    </Button>
</FrameLayout>