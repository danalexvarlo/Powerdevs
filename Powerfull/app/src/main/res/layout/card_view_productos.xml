<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_productos"
    android:layout_margin="12dp"
    app:cardBackgroundColor="@color/colorprimario"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:id="@+id/imagen"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="Nombre producto"
            android:textSize="20dp"
            android:fontFamily="@font/firasans"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/imagen"
            android:layout_toEndOf="@+id/imagen">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="precio"
            android:textStyle="bold"
            android:fontFamily="@font/firasans"
            android:textSize="20dp"
            android:id="@+id/precio"
            android:layout_toEndOf="@+id/imagen"
            android:layout_toRightOf="@+id/imagen"
            android:layout_below="@+id/title">
        </TextView>
        <Button
            android:id="@+id/botonAgregar"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/imagen"
            android:layout_toRightOf="@+id/imagen"
            android:layout_below="@+id/precio"
            android:backgroundTint="@color/colorbotones"
            android:text="AGREGAR"
            android:textStyle="bold"
            android:fontFamily="@font/firasans">
        </Button>
    </RelativeLayout>
</androidx.cardview.widget.CardView>